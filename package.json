{
  "name": "gql-poc",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --watch src && tslint-check",
    "debug": "DEBUG=* yarn start",
    "start": "nodemon ./src/server.ts | pino",
    "start:prod": "pm2 start ./dist/server.js",
    "build": "tsc",
    "run:prod": "yarn build && yarn tslint && yarn start:prod",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint:check": "npx tslint-config-prettier-check ./tslint.json",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-datasource": "~0.6.0",
    "apollo-datasource-rest": "~0.6.0",
    "apollo-server": "~2.7.0",
    "apollo-server-koa": "~2.7.0",
    "debug": "^4.1.1",
    "graphql": "~14.4.2",
    "graphql-tools": "~4.0.5",
    "koa": "~2.7.0",
    "koa-pino-logger": "~2.1.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.4",
    "@types/graphql": "~14.2.2",
    "@types/node": "~12.6.6",
    "nodemon": "~1.19.1",
    "pino-tee": "^0.2.2",
    "prettier": "~1.18.2",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "tslint-config-prettier": "~1.18.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.5.3"
  }
