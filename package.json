    "debug": "^4.1.1",
    "graphql": "~14.2.0",
    "graphql-tools": "~4.0.4",
    "koa": "^2.7.0",
    "koa-pino-logger": "^2.1.3"
  },
  "devDependencies": {
    "@types/debug": "^4.1.3",
    "@types/graphql": "^14.2.0",
    "@types/node": "~10.12.30",
    "nodemon": "~1.18.10",
    "pino-tee": "^0.2.2",
    "prettier": "~1.16.4",
    "ts-node": "~8.0.3",
