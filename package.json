{
  "name": "gql-poc",
  "version": "1.0.0",
  "description": "",
  "main": "src/server.ts",
  "scripts": {
    "dev": "nodemon --watch src && tslint-check",
    "debug": "DEBUG=* yarn start",
    "start": "nodemon ./src/server.ts | pino",
    "start:prod": "pm2 start ./dist/server.js",
    "build": "tsc",
    "run:prod": "yarn build && yarn tslint && yarn start:prod",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "tslint:check": "npx tslint-config-prettier-check ./tslint.json",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "apollo-datasource": "~0.7.2",
    "apollo-datasource-rest": "~0.9.4",
    "apollo-server": "~2.25.3",
    "apollo-server-koa": "~2.18.2",
    "debug": "^4.2.0",
    "graphql": "~15.3.0",
    "graphql-tools": "~7.0.0",
    "koa": "~2.13.0",
    "koa-pino-logger": "~3.0.0"
  },
  "devDependencies": {
    "@types/debug": "^4.1.5",
    "@types/graphql": "~14.5.0",
    "@types/node": "~12.19.1",
    "nodemon": "~2.0.6",
    "pino-tee": "^0.3.0",
    "prettier": "~2.1.2",
    "ts-node": "~8.0.0",
    "tslint": "~6.1.3",
    "tslint-config-prettier": "~1.18.0",
    "tslint-plugin-prettier": "~2.3.0",
    "typescript": "~4.0.3"
  }
